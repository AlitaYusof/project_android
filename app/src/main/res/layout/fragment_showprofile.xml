<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.ShowprofileFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.v7.widget.CardView
            android:id="@+id/carddri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="94dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.218"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/text_name_driv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="ชื่อ"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.466"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textSize="18sp" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="หมายเลขโทรศัพท์"
                    app:layout_constraintStart_toStartOf="@+id/text_name_driv"
                    app:layout_constraintTop_toBottomOf="@+id/text_name_driv"
                    tools:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_startpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="ม.ราชภัฏ"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.305"
                    app:layout_constraintStart_toEndOf="@+id/textView_shstart"
                    app:layout_constraintTop_toBottomOf="@+id/editText5" />

                <EditText
                    android:id="@+id/edit_shendpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="ม.ทักษิน"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.343"
                    app:layout_constraintStart_toEndOf="@+id/textView_shend"
                    app:layout_constraintTop_toBottomOf="@+id/edit_startpoint" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="time"
                    android:text="เวลา"
                    app:layout_constraintBottom_toBottomOf="@+id/editText5"
                    app:layout_constraintTop_toTopOf="@+id/editText5"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="192dp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:inputType="date"
                    android:text="วัน เดือน ปี"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="56dp"
                    android:layout_marginRight="56dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="เงินสด"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.166"
                    app:layout_constraintStart_toEndOf="@+id/textView_status"
                    app:layout_constraintTop_toBottomOf="@+id/editText8" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="100 บาท"
                    app:layout_constraintEnd_toEndOf="@+id/edit_shendpoint"
                    app:layout_constraintTop_toBottomOf="@+id/edit_shendpoint" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยกเลิก"
                    tools:layout_editor_absoluteX="132dp"
                    tools:layout_editor_absoluteY="446dp" />

                <TextView
                    android:id="@+id/textView_shstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จุดต้นทาง"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="221dp" />

                <TextView
                    android:id="@+id/textView_shend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="จุดปลายทาง"
                    app:layout_constraintTop_toBottomOf="@+id/textView_shstart"
                    tools:layout_editor_absoluteX="20dp" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="ราคา"
                    app:layout_constraintEnd_toStartOf="@+id/editText8"
                    app:layout_constraintHorizontal_bias="0.348"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_shend" />

                <TextView
                    android:id="@+id/textView_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สถานะการชำระ"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="389dp" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>